<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th><%= @ads.model.human_attribute_name("picture") %></th>
      <th><%= @ads.model.human_attribute_name("title") %></th>
      <th><%= @ads.model.human_attribute_name("price") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
      <tr>
          <th scope="row"><%= ad.id %> </th>
          <td><%= image_tag ad.picture(:thumb) %></td>
          <td><%= ad.title %></td>
          <td><%= humanized_money_with_symbol ad.price %></td>
          <td>
            <%= link_to edit_site_profile_ad_path(ad), class: "btn btn-primary" do %>            
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>            
          </td>
      </tr>
    <% end %>
  </tbody>
</table>