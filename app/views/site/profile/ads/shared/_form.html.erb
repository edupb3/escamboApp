<% content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/ads.js' %>
<% end %>

<% if (@ad.errors.any? ) %>
  <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <ul>
        <% @ad.errors.full_messages.each do |message| %>
          <li> <%= message %> </li> 
        <% end %>
      </ul>
  </div>
<% end %>

<%= form_for [:site, :profile, @ad], html: {multipart: true} do |f| %>
  
  <div class="row">
    <div class="form-group col-xs-6">    
      <%= f.label :title %>    
      <%= f.text_field :title, class:"form-control", placeholder:"Título" %>    
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-2">   
        <%= f.label :price %>    
        <div class="input-group">
          <div class="input-group-addon"><%= @ad.price.currency.symbol %></div>          
          <%= f.text_field :price, class:"form-control" %>    
        </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-2">   
        <%= f.label :finish_date %>    
        <%= f.text_field :finish_date, class:"form-control datepicker" %>            
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-3">    
      <%= f.label :category %>    
      <%= f.collection_select :category_id, Category.all, :id, :description, {}, class:"form-control" %>    
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-10">    
      <%= f.label :description %>    
      <%= f.text_area :description, class:"form-control", cols: 20, rows: 10 %>    
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-10" >    
      <div class="panel panel-primary">
          <div class="panel-heading">
              Pré-Visualização
          </div>
          <div class="panel-body">
              <p> <%= md_to_html @ad.description %> </p>
          </div>          
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-6">    
      <%= f.label :picture %>    <br>
      <% if (@ad.picture.present?) then %>
        <%= image_tag @ad.picture(:thumb), class:"img-thumbnail" %>
      <% end %>
      <%= f.file_field :picture, class:"btn" %>    
    </div>
  </div>

  <%= submit_tag t("buttons.save"), class:"btn btn-default" %>
  
<% end %>