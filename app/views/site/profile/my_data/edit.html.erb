
<% content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/ads.js' %>
<% end %>

<% if (@profile_member.errors.any? ) %>
  <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <ul>
        <% @profile_member.errors.full_messages.each do |message| %>
          <li> <%= message %> </li> 
        <% end %>
      </ul>
  </div>
<% end %>

<%= form_for(@profile_member, url: site_profile_my_datum_path(@profile_member)) do |f| %>
  
  <div class="row">
    <div class="form-group col-xs-6">    
      <%= f.label :first_name %>    
      <%= f.text_field :first_name, class:"form-control", placeholder:"Primeiro Nome" %>    
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-6">    
      <%= f.label :last_name %>    
      <%= f.text_field :last_name, class:"form-control", placeholder:"Último Nome" %>    
    </div>
  </div>

  <div class="row">
    <div class="form-group col-xs-2">   
        <%= f.label :birthdate %>    
        <%= f.text_field :birthdate, class:"form-control datepicker", value: (l(@profile_member.birthdate) unless @profile_member.birthdate.blank?) %>            
    </div>
  </div>

  <%= submit_tag t("buttons.save"), class:"btn btn-default" %>
  
<% end %>