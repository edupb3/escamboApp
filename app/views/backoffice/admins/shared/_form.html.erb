        
<h1 class="page-header"><%= @admin.model_name.human(count: 2) %></h1>

<% if (@admin.errors.any? ) %>
  <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <ul>
        <% @admin.errors.full_messages.each do |message| %>
          <li> <%= message %> </li> 
        <% end %>
      </ul>
  </div>
<% end %>

<div class="panel panel-default">

  <div class="panel-heading">
      <%= action %>
  </div>
  <div class="panel-body">
    <div class="col-lg-6">
      <%= form_for [:backoffice, @admin] do |f| %>
        <div class="form-group">
          <label><%= f.label :name %></label>
          <%= f.text_field :name, class:"form-control", placeholder:"Nome" %>                           
        </div>
        <div class="form-group">
          <label><%= f.label :email %> </label>
          <%= f.text_field :email, class:"form-control", placeholder:"Ex. nome@dominio.com" %>                           
        </div>
        <% if (policy(@admin).edit?) %>
          <div class="form-group">
            <label><%= f.label :role %> </label>
            <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
               <div class="radio">
                 <%= b.label { b.radio_button + b.text } %>
               </div>  
            <% end %>          
          </div>
        <% end %>
        <div class="form-group">
          <label><%= f.label :password %></label>
          <%= f.password_field :password, class:"form-control" %>                           
        </div>
        <div class="form-group">
          <label><%= f.label :password_confirmation %></label>
          <%= f.password_field :password_confirmation, class:"form-control" %>                           
        </div>
        <button type="submit" class="btn btn-default"><%= t("buttons.save") %></button>
      <% end %>
    </div>
  </div>
  
</div>
                    
                   