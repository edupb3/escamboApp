$(function(){
  
  let $sendMailModal = $('#sendMail');
  
  $('#recipient-name').val('<%=@admin.email %>')
  
  $('h4.modal-title').text("<%= I18n.t('labels.send_message_to', name: @admin.name) %>");
  
  $sendMailModal.modal();
  
  // Set focus on 'Message Text' after modal is shown  
  $sendMailModal.on('shown.bs.modal', function () {
    $('#subject-text').focus();
  })
  
})